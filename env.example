# Dispatch API Configuration (Monkey Subenv)
DISPATCH_GRAPHQL_ENDPOINT=https://graphql-gateway.monkey.dispatchfog.org/graphql
DISPATCH_ORGANIZATION_ID=your_org_id_here

# Authentication Method (choose one)
USE_IDP_AUTH=false

# Option 1: Static Token Authentication
DISPATCH_AUTH_TOKEN=your_static_auth_token_here

# Option 2: IDP Authentication (set USE_IDP_AUTH=true)
# Based on Dispatch's JWT authentication system
IDP_ENDPOINT=https://id.dispatchfog.io
IDP_CLIENT_ID=your_client_id
IDP_CLIENT_SECRET=your_client_secret
IDP_SCOPE=dispatch:api
IDP_TOKEN_ENDPOINT=https://id.dispatchfog.io/oauth/token

# Dispatch uses JWT authentication with JWKS endpoints
# The GraphQL gateway expects Authorization: Bearer <token> headers
# Tokens are validated against JWKS endpoints configured in the gateway

# Claude AI Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
USE_CLAUDE_AI=true
